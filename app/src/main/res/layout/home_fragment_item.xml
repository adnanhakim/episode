<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:id="@+id/RelativeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivHomeBackdrop"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/translucent_background"
            android:id="@+id/tvShowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Show Name"
            android:fontFamily="@font/gravitybook"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/RelativeNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNetworks"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gravitybook"
                android:padding="10dp"
                android:text="Networks"
                android:textColor="@color/colorWhite"
                android:textSize="17dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeSeasonEpisodeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSeasonEpisode"
                android:layout_marginTop="105dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/keepcalm"
                android:text="Season|Episode"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvAirDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvSeasonEpisode"
                android:textColor="@color/colorWhite"
                android:text="AirDate"
                android:layout_marginTop="85dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvEpisodeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EpisodeName"
                android:textSize="17dp"
                android:fontFamily="@font/gravitybook"
                android:textColor="@color/colorWhite"
                android:paddingLeft="10dp"
                android:layout_marginTop="137dp"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>