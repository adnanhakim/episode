<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/homeRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/homeLastRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvLastEpisode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gravitybook"
                    android:padding="8dp"
                    android:text="Previous Episodes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorAccent" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/lastNestedScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLastEpisode">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/homeLastRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:focusable="true"
                android:id="@+id/homeNextRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeLastRelative">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvNextEpisode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gravitybook"
                    android:padding="8dp"
                    android:text="Upcoming Episodes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorAccent" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nextNestedScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNextEpisode"
                    android:focusedByDefault="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/homeNextRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>