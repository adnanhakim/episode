<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeProfileCover"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/ivProfileCover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cover" />

        <ImageView
            android:id="@+id/ivProfileDp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/iv_profile"
            android:src="@drawable/layer_list_1" />

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/keepcalm"
            android:text="Your name"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/tvProfileFavourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/gravitybook"
            android:text="25 Favourites"
            android:textSize="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeProfileCover"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gravitybook"
            android:text="Email: test@gmail.com"
            android:textColor="@color/colorBlack"
            android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>